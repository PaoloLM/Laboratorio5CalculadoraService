<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ver_resultado"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="100dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:text="0"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_suma"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="50dp"
            android:text="+"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_resta"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="50dp"
            android:text="-"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_division"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="50dp"
            android:text="รท"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_multiplicacion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="50dp"
            android:text="ร"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LN_vistaprevia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ver_previa"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LN_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="370dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="2">

        <EditText
            android:id="@+id/num_1"
            android:maxLength="4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:inputType="number"
            android:hint="Numero 1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/num_2"
            android:maxLength="4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:inputType="number"
            android:hint="Numero 2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LN_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Calcular" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>